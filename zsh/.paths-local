# ==============================================================================
# Paths!
# ==============================================================================

# Get paths from dotfiles
source $DOTFILES/zsh/.paths;

# Custom paths go here
# ------------------------------------------------------------------------------

# yarn
if [[ -d $HOME/.yarn ]]; then
    PATH=$PATH:$HOME/.yarn/bin;
fi;

# rbenv
if [[ -d $HOME/.rbenv ]]; then
    PATH=$HOME/.rbenv/bin:$PATH;

    eval "$(rbenv init -)";
fi;

# ------------------------------------------------------------------------------

export PATH;
